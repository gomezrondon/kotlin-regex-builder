{
  "template-name": "build gradle",
  "version": 1.0,
  "extension": "gradle",

  "program": {
    "item": [
      {
        "tag": "group",
        "detect":["group\\s?[=|\\s]\\s?'[^']*'"],
        "get": [
          {
            "tag": "name",
            "regex": "(?<=').*?(?=')"
          }
        ]
      },
      {
        "tag": "version",
        "detect":["version\\s?[=|\\s]\\s?'[^']*'"],
        "get": [
          {
            "tag": "name",
            "regex": "(?<=').*?(?=')"
          }
        ]
      },
      {
        "tag": "plugins",
        "optional": false,
        "detect": ["(?<=plugins\\s\\{).*?(?=\\})"],
        "get": [
          {
            "tag": "name",
            "regex": "(?<=id)\\s+.*?(?=\\s)"
          },{
            "tag": "version",
            "regex": "(\\s+version\\s(['\"]).*?(?:\\2))?"
          }
        ]
      },
      {
        "tag": "repositories",
        "optional": false,
        "detect": ["(?<=repositories\\s\\{).*?(?=\\}#9#)"],
        "get": [
           {
            "tag": "repositories",
            "get": [
              {
                "tag": "name",
                "regex": "\\w+(?=\\()"
              }
            ]
          },
          {
            "tag": "repositories",
            "optional": false,
            "detect": "\\w+(?=\\s\\{).*?(?:\\})",
            "get": [
              {
                "tag": "name",
                "regex": "\\w+(?=\\s\\{)"

              },{
                "tag": "url",
                "regex": "(?<=([\"|'])).*(?=\\1)"
              }
            ]
          }
        ]
      },
      {
        "tag": "dependencies",
        "optional": false,
        "detect":["(?<=dependencies\\s\\{).*?(?=\\})","\\w+\\s?\\(?(?:\").*?(?=\")"],
        "get": [
          {
            "tag": "type",
            "regex": "\\w+(?=[\\s|\\(])"
         },
          {
            "tag": "group",
            "regex":"group:\\s'[^']*'"
          },
          {
            "tag": "name",
            "regex":"name:\\s'[^']*'"
          },
          {
            "tag": "version",
            "regex":"version:\\s'[^']*'"
          }
        ]
      }

    ]
  }
}